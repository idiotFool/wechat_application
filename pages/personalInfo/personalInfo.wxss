/* pages/personalInfo.wxss */
.container {
	padding: 5px 10px;
	background-color: #f3f3f3;
	width: 100%;
	height: 100%;
}
.content-item {
	width: 100%;
	padding: 10px;
}
.content-item>view:not(.title) {
	padding-left: 20px;
	font-size: 14px;
	margin: 4px 0;
}
.content-item .title {
	background-color: #a7cbc9;
	box-shadow: 6px 6px 3px #888888;
	padding: 4px 8px;
	border-radius: 4px;
	margin-bottom: 10px;
	font-size: 18px;
}
.content-item label {
	font-weight: bold;
}
.block-item {
	display: flex;
}
.block-item>view {
	flex: 1;
}
.progress-box {
	margin: 30px 0;
}
.canvas {
	width: 100%;
	height: 200px;
}