<view class="container">
  <!-- 背景图片 -->
  <image class="background" src="{{backgroundImgUrl}}"></image>

  <!-- 首页文字 -->
  <view class="content">
     <block wx:for="{{resumeItems}}" wx:key="*this">
        <view class="item-wrapper" bindtap="bindViewTap" data-url="{{item.url}}">
          <view class="square"></view>
          <view class="item">{{item.desc}}</view>
        </view>
     </block>
  </view>
</view>
